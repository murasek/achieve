



<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= link_to user_path(user) do %>
          <%= link_to "詳細",user_path(user), class: 'btn btn-default btn-sm btn-success' %>
        
        <% end %>
      
       
         <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>
      </div>
  <% end %>
</div>