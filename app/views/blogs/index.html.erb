<p id="notice"><%= notice %></p>

<h1>ブログ一覧</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class = "blog_index">

    <% @blogs.each do |blog| %>
      <div class = "col-xs-12 col-md-6 col-lg-4 blog-panel">
        <div class = "blog_index-links">
          <%= image_tag blog.image %>
          <%= blog.content %>

          <%= link_to '編集', edit_blog_path(blog), class: 'btn btn-danger' %>
          <%= link_to '削除', blog, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-info' %>
        </div>
       </div>
    <% end %>
  </div>
</table>
