<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <div class = "col-xs-12 col-md-6 col-lg-4 blog-panel">
    <div class = "blog_index-links">  
    <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>

    <% @blogs.each do |blog| %>

    <%= profile_img(blog.user) %>
    <%= blog.user.name %>
    <%= link_to blog_path(blog) do %>
    <%= blog.title %></strong>
        <%= blog.content %>
        <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
     </div>
    <% end %>
  </div>
</div>
